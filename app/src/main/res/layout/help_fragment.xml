<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/color_background"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="40dp"
        android:paddingTop="20dp"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_height="match_parent"
                app:autoSizeMaxTextSize="@dimen/padding_between_views_double"
                android:textColor="@color/text_color"
                android:drawablePadding="5dp"
                app:drawableTint="@color/text_color"
                app:drawableStartCompat="@drawable/ic_baseline_help_24"
                android:id="@+id/heading_help"
                style="@style/Heading"
                android:text="@string/menu_help"
                android:layout_width="match_parent"
                app:autoSizeTextType="uniform" />

            <View
                android:layout_marginTop="10dp"
                android:id="@+id/divider"
                android:background="@color/text_color"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <TextView
                android:layout_height="match_parent"
                android:text="@string/what_does_this_app_do"
                android:textColor="@color/text_color"
                android:layout_marginTop="10dp"
                style="@style/Heading"
                android:layout_width="match_parent"
                app:autoSizeMaxTextSize="@dimen/padding_between_views_double"
                app:autoSizeTextType="uniform" />

            <TextView
                style="@style/SubHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/app_usage"
                android:textSize="@dimen/help_summary_size" />

            <TextView
                android:layout_height="wrap_content"
                style="@style/SubHeading"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="@string/add_or_edit_profile"
                android:textColor="@color/text_color"
                app:drawableStartCompat="@drawable/ic_baseline_add_24"
                app:drawableTint="@color/text_color" />

            <TextView
                style="@style/SubHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/add_summary"
                android:textSize="@dimen/help_summary_size" />

            <TextView
                style="@style/SubHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="@string/delete_a_profile"
                android:textColor="@color/text_color"
                app:drawableStartCompat="@drawable/ic_baseline_delete_24"
                app:drawableTint="@color/text_color" />

            <TextView
                style="@style/SubHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/swipe_left_to_delete_a_profile"
                android:textSize="@dimen/help_summary_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/text_color" />

            <TextView
                style="@style/SubHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/extra_help"
                android:textSize="@dimen/help_summary_size" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>