<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Profiler" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/blue_medium</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="android:windowBackground">@color/reply_blue_dark</item>
        <item name="colorSecondary">@color/blue_medium</item>
        <item name="colorSecondaryVariant">@color/blue_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/reply_blue_medium</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="WeekDaySelectorStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="VolumeSliderOpenButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetRight">0dp</item>
        <item name="android:textAppearance">@style/Heading</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">@dimen/padding_between_views_1x5</item>
    </style>
    <style name="Theme.Profiler.BottomNavigationStyle" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@color/reply_blue_very_light</item>
        <item name="itemTextColor">@color/reply_blue_very_light</item>
        <item name="android:background">@color/reply_blue_medium</item>
    </style>

    <style name="Theme.Profiler.HomeAppBarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/Theme.Profiler.TextAppearance</item>
        <item name="android:background">@color/reply_blue_medium</item>
    </style>

    <style name="ThemeOptionsStyle" parent="ThemeOverlay.AppCompat.Dark"/>
    <style name="ThemePopUpStyle" parent="ThemeOverlay.AppCompat.Dark"/>

    <style name="divider_style">
        <item name="android:background">@color/color_background</item>
    </style>

    <color name="text_color">@color/white</color>
    <color name="color_background">@color/reply_blue_medium</color>
    <color name="red">#d44</color>
</resources>