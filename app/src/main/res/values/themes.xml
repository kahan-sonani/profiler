<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Profiler" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/reply_blue_medium</item>
        <item name="colorPrimaryVariant">@color/reply_blue_dark</item>
        <item name="colorOnPrimary">@color/reply_blue_very_light</item>
        <item name="android:textColor">@color/reply_blue_medium</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/reply_blue_medium</item>
        <item name="colorSecondaryVariant">@color/reply_blue_dark</item>
        <item name="colorOnSecondary">@color/reply_blue_very_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Profiler.HomeAppBarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/Theme.Profiler.TextAppearance</item>
        <item name="android:background">@color/reply_blue_very_light</item>
    </style>
    <style name="Theme.Profiler.TextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/roboto_slab_bold</item>
    </style>

    <style name="WeekDaySelectorStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="Theme.Profiler.BottomNavigationStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/reply_blue_very_light</item>
        <item name="itemIconTint">@color/reply_blue_dark</item>
    </style>

    <style name="divider_style">
        <item name="android:background">@color/color_background</item>
    </style>

    <style name="VolumeSliderOpenButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAppearance">@style/Heading</item>
        <item name="android:padding">@dimen/padding_between_views_1x5</item>
    </style>

    <style name="ThemeOptionsStyle" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="ThemePopUpStyle" parent="ThemeOverlay.AppCompat.Light"/>

    <color name="text_color">@color/reply_blue_medium</color>
    <color name="color_background">@color/reply_blue_very_light</color>
    <color name="red">#d44</color>
</resources>